<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <!--뒤로가기 버튼-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/go_back"
                android:layout_width="50dp"
                android:layout_height="41.16dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/myalarm_goback"/>
        </RelativeLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!--디데이-->
        <TextView
            android:id="@+id/myalarm_dday1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D-1"
            android:textSize="48dp"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

    <!--Wrapper-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="60dp"
        android:paddingLeft="25dp"
        android:background="@drawable/my_alarm_wrapper">

        <!--내용-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!--책 제목-->
            <TextView
                android:id="@+id/myalarm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="누가 내 머리에 똥쌌어"
                android:textSize="26dp" />

            <!--전자도서관 명-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="45dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울시 교육청 전자도서관"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="19dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="뷰어 "
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yes24 전자도서관"
                        android:textColor="@color/spinner_background_color"
                        android:textSize="19dp"/>
                </LinearLayout>

            </LinearLayout>

            <!--일정-->
            <!--두줄정렬을 위한 레이아웃-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                >

                <!--예정-->
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="예약일"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="대여 예정일"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="반납 예정일"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020.07.01"
                        android:textColor="@color/spinner_background_color"
                        android:layout_marginBottom="5dp"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020.07.01"
                        android:textColor="@color/spinner_background_color"
                        android:layout_marginBottom="5dp"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020.07.01"
                        android:textColor="@color/spinner_background_color"
                        android:layout_marginBottom="5dp"
                        android:textSize="16dp"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!--하단 버튼-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="17dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                >

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/alarm_activity_create"
                    android:background="@drawable/myalarm_create"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerInside"
                    />


                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/alarm_activity_delete"
                    android:background="@drawable/myalarm_delete"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerInside"/>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>